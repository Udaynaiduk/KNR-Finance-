@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-sm text-center p-4">
                <div class="card-body">
                    <!-- Optional Lock Icon -->
                    <div class="mb-3">
                        <i class="bi bi-lock-fill" style="font-size:3rem;color:#dc3545;"></i>
                    </div>

                    <h2 class="card-title text-danger mb-3">Access Denied</h2>
                    <p class="card-text mb-4">
                        You do not have permission to access this page.
                    </p>

                    <!-- Optional dynamic message for roles -->
                    @if (ViewBag.RequiredRole != null)
                    {
                        <p class="text-warning mb-4">
                            Required role: @ViewBag.RequiredRole
                        </p>
                    }

                    <a class="btn btn-primary btn-lg w-100" asp-controller="Home" asp-action="Index">
                        Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
