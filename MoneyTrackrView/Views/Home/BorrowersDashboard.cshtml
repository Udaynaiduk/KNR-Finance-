@model IEnumerable<MoneyTrackr.Borrowers.Models.Borrower>

@{
    ViewData["Title"] = "Borrowers Dashboard";
}

<h1 class="mb-4 text-center">Borrowers Dashboard</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var borrower in Model)
    {
        @await Html.PartialAsync("BorrowerView", borrower)
    }
</div>



