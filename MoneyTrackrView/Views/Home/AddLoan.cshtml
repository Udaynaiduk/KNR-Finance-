@model List<MoneyTrackr.Borrowers.Models.Loan>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Add New Loan(s)</h5>
    </div>

    <div class="card-body">

        <!-- Borrower Info (Read-only) -->
        <div class="mb-4">
            <h6>Borrower Details</h6>
            <div class="row">
                <div class="col-md-4 mb-2">
                    <label class="form-label">Full Name</label>
                    <input class="form-control" value="@ViewBag.BorrowerFullName" readonly />
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Phone Number</label>
                    <input class="form-control" value="@ViewBag.BorrowerPhoneNumber" readonly />
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Address</label>
                    <input class="form-control" value="@ViewBag.BorrowerAddress" readonly />
                </div>
            </div>
        </div>

        <form asp-action="AddLoans" method="post" class="needs-validation" novalidate>

            <div id="loans-container">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="loan-item border rounded p-3 mb-3 shadow-sm">

                        <input type="hidden" name="[@i].BorrowerId" value="@ViewBag.BorrowerId" />

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">Loan Amount</label>
                                <input name="[@i].Amount" type="number" step="0.01"
                                       class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Interest Rate (%)</label>
                                <input name="[@i].InterestRate" type="number" step="0.01"
                                       class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Start Date</label>
                                <input name="[@i].StartDate" type="date"
                                       class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Partial Payment</label>
                                <input name="[@i].PartialPayment" value=0 type="number" step="0.01"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Partial Payment Date</label>
                                <input name="[@i].PartialPaymentPaidDate" type="date"
                                       class="form-control" />
                            </div>

                           
                            <!-- Monthly Interest -->
                            <div class="col-md-6 mt-4">
                                <label class="form-label">Monthly Interest Payer</label>
                                <select name="[@i].MontlyIntersetPayer" class="form-select">                                  
                                    <option value="false">False</option>
                                    <option value="true">True</option>
                                </select>
                            </div>

                            <!-- Non Cycled -->
                            <div class="col-md-6 mt-4">
                                <label class="form-label">Non-Cycled Member</label>
                                <select name="[@i].NonCycledMemeber" class="form-select">                                   
                                    <option value="false">False</option>
                                    <option value="true">True</option>
                                </select>
                            </div>


                            <div class="col-12">
                                <label class="form-label">Notes</label>
                                <textarea name="[@i].Notes" class="form-control" rows="2"></textarea>
                            </div>

                        </div>

                        <div class="mt-3 text-end">
                            <button type="button" class="btn btn-danger btn-sm remove-loan">
                                Remove
                            </button>
                        </div>
                    </div>
                }

            </div>

            <div class="d-flex justify-content-between mt-3">
                <button type="button" class="btn btn-primary" id="add-loan">
                    + Add Another Loan
                </button>
                <button type="submit" class="btn btn-success">
                    Save All Loans
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {

    <script>
        // Bootstrap validation
        (function () {
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            });
        })();

        const container = document.getElementById("loans-container");
        const addBtn = document.getElementById("add-loan");

        addBtn.addEventListener("click", () => {
    const index = container.children.length;
    const template = container.children[0].cloneNode(true);

    // Reset inputs & textarea
    template.querySelectorAll("input, textarea").forEach(el => {

        // keep hidden BorrowerId
        if (el.type === "hidden") return;

        // default PartialPayment = 0
        if (el.name && el.name.includes("PartialPayment")) {
            el.value = 0;
        }
        else {
            el.value = "";
        }
    });

    // Reset selects to false
    template.querySelectorAll("select").forEach(el => {
        el.value = "false";
    });

    // Re-index names
    template.querySelectorAll("[name]").forEach(el => {
        el.name = el.name.replace(/\[\d+\]/, `[${index}]`);
    });

    container.appendChild(template);
});

        container.addEventListener("click", e => {
            if (e.target.classList.contains("remove-loan")) {
                if (container.children.length > 1) {
                    e.target.closest(".loan-item").remove();
                    reindex();
                }
            }
        });

        function reindex() {
            [...container.children].forEach((item, i) => {
                item.querySelectorAll("[name]").forEach(el => {
                    el.name = el.name.replace(/\[\d+\]/, `[${i}]`);
                });
            });
        }


    </script>
}
