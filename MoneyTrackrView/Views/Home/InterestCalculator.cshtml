@{
    ViewData["Title"] = "Loan Interest Calculator";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Card -->
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="InterestCalculator" method="post">
                        <div class="mb-3">
                            <label class="form-label">Principal Amount (₹)</label>
                            <input type="number" step="0.01" class="form-control" name="principal" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Interest per ₹100 per month</label>
                            <input type="number" step="0.01" class="form-control" name="interestPer100PerMonth" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" name="startDate" required/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" name="endDate" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Calculate Interest</button>
                    </form>

                    @if (ViewBag.Interest != null)
                    {
                        <div class="alert alert-success mt-3 text-center">
                            <h5>Calculated Interest:</h5>
                            <p class="fw-bold fs-4">₹@ViewBag.Interest</p>
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
