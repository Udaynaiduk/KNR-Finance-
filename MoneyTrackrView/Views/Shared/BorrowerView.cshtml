@model MoneyTrackr.Borrowers.Models.Borrower

<div class="col">
    <div class="card h-100 shadow-sm border-primary">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">@Model.FullName</h5>
                <p class="card-text mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p class="card-text mb-1"><strong>Total Borrowed:</strong> ₹@Model.TotalBorrowedAmount.ToString("N2")</p>
                <p class="card-text mb-0"><strong>Address:</strong> @Model.Address</p>
            </div>

            <div class="mt-3 d-flex justify-content-between flex-wrap gap-2">
                <a class="btn btn-primary w-100"
                   asp-controller="Home"
                   asp-action="GetBorrowerById"
                   asp-route-Id="@Model.Id">
                    View Loans
                </a>

                <a class="btn btn-success w-100"
                   asp-controller="Home"
                   asp-action="AddLoan"
                   asp-route-borrowerId="@Model.Id">
                    + Add Loan
                </a>

                <a class="btn btn-danger w-100"
                   asp-controller="Home"
                   asp-action="DeleteBorrower"
                   asp-route-id="@Model.Id"
                   onclick="return confirm('Are you sure you want to delete this borrower? All loans will also be deleted.');">
                    Delete Borrower
                </a>
            </div>
        </div>
    </div>
</div>