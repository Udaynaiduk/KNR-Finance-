@model MoneyTrackr.Borrowers.Models.Borrower

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">@Model.FullName</h4>
                <small>@Model.PhoneNumber | @Model.Address</small>
            </div>
            <div>
                <a class="btn btn-light btn-sm"
                   asp-controller="Home"
                   asp-action="AddLoan"
                   asp-route-borrowerId="@Model.Id">
                    + Add New Loan
                </a>
            </div>
        </div>

        <div class="card-body">

            @if (Model.Loans.Any())
            {
                <div class="row g-3">
                    @foreach (var loan in Model.Loans)
                    {
                        @await Html.PartialAsync("LoanView", loan)
                       
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No loans available for this borrower.
                </div>
            }

            <!-- ================= TOTAL ================= -->
            <div class="mt-4 text-end">
                <h5>Total Borrowed: <span class="text-primary">₹@Model.TotalBorrowedAmount.ToString("N2")</span></h5>
            </div>
        </div>
    </div>
</div>



