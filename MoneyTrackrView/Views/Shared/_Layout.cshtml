<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyTrackrView</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneyTrackrView.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-2">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <span class="text-primary fs-4">KNR</span>
                    <span class="text-success fs-5 ms-1">Finance</span>
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    @if (User.IsInRole("Admin"))
                    {
                        <!-- Left Menu -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-2">
                            <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="CreateWithLoan">
                                Add Member
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="BorrowersDashboard">
                                Borrowers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="GetAllLoans">
                                Loans
                            </a>
                        </li>
                    </ul>
                    }

                    <!-- Right Side -->
                    <div class="d-flex flex-column flex-lg-row gap-2 align-items-lg-center">
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Search -->
                            <form class="d-flex" method="get" asp-controller="Home" asp-action="SearchBorrower">
                                <input class="form-control rounded-pill me-2" type="search"
                                placeholder="Search borrower..." name="query">
                                <button class="btn btn-primary rounded-pill">Search</button>
                            </form>
                        }
                        <!-- Calculator -->
                        <a class="btn btn-success rounded-pill"
                           asp-controller="Home" asp-action="InterestCalculator">
                            Loan Calculator
                        </a>

                        <!-- Auth -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-primary rounded-pill dropdown-toggle"
                                        data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li>
                                        <form method="post" asp-controller="Home" asp-action="Logout">
                                            <button class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary rounded-pill"
                               asp-controller="Home" asp-action="SignIn">
                                Login
                            </a>

                            <a class="btn btn-outline-primary rounded-pill"
                               asp-controller="Home" asp-action="SignUp">
                                Sign Up
                            </a>
                            
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>






    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top mt-5">
        <div class="container py-4">

            <div class="row text-center text-md-start align-items-center">

                <!-- Brand -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="fw-bold text-primary mb-1">KNR Finance</h5>
                    <small class="text-muted">
                        Smart loan & borrower management
                    </small>
                </div>

                <!-- Links -->
                <div class="col-md-4 mb-3 mb-md-0">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">
                                Privacy
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-decoration-none text-muted">Terms</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="text-decoration-none text-muted">Contact</a>
                        </li>
                    </ul>
                </div>

                <!-- Copyright -->
                <div class="col-md-4 text-md-end">
                    <small class="text-muted">
                        © 2026 MoneyTrackrView. All rights reserved.
                    </small>
                </div>

            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .navbar .nav-link:hover {
        color: #0d6efd !important;
    }

    footer a:hover {
        text-decoration: underline;
    }

</style>