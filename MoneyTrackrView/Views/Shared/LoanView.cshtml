@model MoneyTrackr.Borrowers.Models.Loan
<div class="col-12 col-md-6">
    <div class="card shadow-sm border @(Model.IsOverThreeYears ? "border-danger" : "border-success") h-100">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2">
                ₹@Model.Amount.ToString("N2")
                <small class="text-muted">(@Model.InterestRate.ToString("F2")%)</small>
            </h5>

            <p class="mb-1"><strong>Start:</strong> @Model.StartDate.ToString("dd-MMM-yyyy")</p>
            <p class="mb-1"><strong>End:</strong> @Model.EndDate.ToString("dd-MMM-yyyy")</p>
            <p class="mb-1"><strong>Partial Paid:</strong> @(Model.PartialPayment > 0 ? Model.PartialPayment.ToString("N2") : "-")</p>
            <p class="mb-1"><strong>Remaining:</strong> @Model.RemainingAmount.ToString("N2")</p>

            <p class="mb-2">
                <strong>Status:</strong>
                @if (Model.IsPaid)
                {
                    <span class="badge bg-success">Paid</span>
                }
                else if (Model.IsOverThreeYears)
                {
                    <span class="badge bg-danger">Over 3 Years</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Active</span>
                }
            </p>

            <div class="mt-auto d-flex flex-wrap gap-1">
                <a class="btn btn-sm btn-info flex-grow-1 flex-md-auto"
                   asp-action="GetInterestFor"
                   asp-controller="Home"
                   asp-route-id="@Model.Id">
                    Interest
                </a>
                <a class="btn btn-sm btn-primary flex-grow-1 flex-md-auto"
                   asp-action="EditLoan"
                   asp-controller="Home"
                   asp-route-id="@Model.Id"
                   asp-route-mode="edit">
                    Edit
                </a>
                <a class="btn btn-sm btn-warning flex-grow-1 flex-md-auto"
                   asp-action="EditLoan"
                   asp-controller="Home"
                   asp-route-id="@Model.Id"
                   asp-route-mode="partial">
                    Partial
                </a>
                <a class="btn btn-sm btn-success flex-grow-1 flex-md-auto"
                   asp-action="EditLoan"
                   asp-controller="Home"
                   asp-route-id="@Model.Id"
                   asp-route-mode="close">
                    Close
                </a>
                <a class="btn btn-sm btn-danger flex-grow-1 flex-md-auto"
                   asp-action="DeleteLoan"
                   asp-controller="Home"
                   asp-route-id="@Model.Id"
                   onclick="return confirm('Are you sure you want to delete this loan?');">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>